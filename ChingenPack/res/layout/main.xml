<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGroundColorWhite"
    android:orientation="vertical" 
    android:baselineAligned="true" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#111111"
        android:textSize="10pt"
        android:text="@string/main_description_text" />

    <Button
        android:id="@+id/ChingenButton"
        android:text="@string/chingen_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onChingenButtonPressed"
		android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/chingen_logo" />
    

    <Button
        android:id="@+id/ChingenPanicButton"
        android:text="@string/chingen_panic_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onChingenPanicButtonPressed"
		android:gravity="left|center_vertical"
        android:drawableLeft="@drawable/chingen_panic_logo" />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:gravity="right|bottom"
     android:orientation="vertical" >

       <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#111111"
        android:text="@string/ChingenPackVersion" />
    
 </LinearLayout>

</LinearLayout>

